# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

platform :ios do
  desc "Print info plist key"
  desc "- `key`: The info plist key to print"
  desc "- `path`: The info plist path"
  lane :print_info_plist_key do |options|
    Dir.chdir("..") do
      sh("./Overseer/scripts/print_info_plist_key.sh #{options[:key]} #{options[:path]}")
    end
  end

  desc "Update docs"
  desc "- `module`: The module name"
  desc "- `info_plist_path`: The path to the info plist"
  lane :update_docs do |options|
    Dir.chdir("..") do
      sh("./Overseer/scripts/jazzy.sh #{options[:module]} #{options[:info_plist_path]}")
    end
  end
end
